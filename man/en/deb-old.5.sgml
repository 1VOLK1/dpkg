<refentry id="deb-old.5">
  <refmeta>
    <refentrytitle>deb-old</refentrytitle>
    <manvolnum>5</manvolnum>
    <refmiscinfo class="source">Debian Project</refmiscinfo>
    <refmiscinfo class="manua"'>dpkg suite</refmiscinfo>
